<config>
    <api>
        <resources>
            <itserv_scraper translate="title" module="scraper">
                <title>Estensione API Catalogo</title>
                <model>catalog/product_api</model>
                <methods>
                    <items translate="items" module="scraper">
                        <title>Ottieni una lista dei prodotti in catalogo con alcune info in piu</title>
                        <acl>catalog/product</acl>
                    </items>
                </methods>
            </itserv_scraper>   
        </resources>
        <resources_alias>
            <product>catalog_product</product>
        </resources_alias>
    </api>
</config>
